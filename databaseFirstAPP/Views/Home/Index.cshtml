@model databaseFirstAPP.View_Models.hangmanViewModel

@{
    ViewBag.Title = "Hangman - The Game - DB1";
}

<center>
    <br/><br />
    @using (Html.BeginForm("hangmanGame", "Home"))
    {
        @Html.AntiForgeryToken()

        <label> Categoria: </label> <select id="Categoria" name="category_field">
            <option value="random"></option>
                @foreach (var item_cat in Model.Category)
                {
                    <option value="@Html.DisplayFor(modelItem => item_cat.category_ID)">@Html.DisplayFor(modelItem => item_cat.name)</option>
                }

        </select>
            <br/><br />
            <label> Dificuldade: </label> <select id="Dificuldade" name="difficulty_field">
                <option value="random"></option>
                @foreach (var item_dif in Model.Difficulty)
                {
                    <option value="@Html.DisplayFor(modelItem => item_dif.dificulty_ID)">@Html.DisplayFor(modelItem => item_dif.description)</option>
                }
            </select><br/><br />
            <p><input type="submit" value="Rope It" /> </p>
    }

</center>
 